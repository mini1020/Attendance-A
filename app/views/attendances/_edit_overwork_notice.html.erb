<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <% @users.each do |user| %>
        <% if overwork_info(user) %>
          <h4>【<%= user.name %>の残業申請】</h4> <%# form_withのurlがへん %>
          <%= form_with(model: user, url: attendances_update_overwork_notice_user_path(user), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-striped overwork-application__table">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>時間外時間</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              
              <tbody>
                <% user.attendances.each do |attendance| %>
                  <%= f.fields_for :attendances do |day| %>
                  <%# 申請先のidとお知らせを開いている上長のidが一致する
                      (=お知らせを開いている上長に残業申請をしている)場合 %>
                    <% if attendance.applied_id == @superior.id %>
                      <tr>
                        <td><%= l(attendance.worked_on, format: :short) %></td>
                        <td><%= $days_of_the_week[attendance.worked_on.wday] %></td>
                        <td><%= l(attendance.finish_overwork, format: :time) %></td>
                        <td>
                          <%= overwork_times(user.desig_finish_worktime, attendance.finish_overwork,
                              attendance.next_day, attendance.worked_on) %>
                        </td>
                        <td><%= attendance.work_contents %></td>
                        <td><%= day.select :instructor_confirmation,
                                { "なし": 1, "申請中": 2, "承認": 3, "否認": 4 },
                                { selected: 2 }, class: "form-control", required: true %>
                        </td>
                        <td><%= day.check_box :reflection, {}, "true", "false" %></td>
                        <td><%= link_to "確認", user_path(user), class: "btn btn-primary" %></td>
                      </tr>
                    <% end %>
                  <% end %>
                <% end %>
              </tbody>
            </table>
            <% f.submit "変更を送信する" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>