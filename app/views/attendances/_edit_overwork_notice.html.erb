<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <%= form_with(model: @users, url: users_attendances_update_overwork_notice_path, local: true, method: :patch) do |f| %>
        <% @users.each do |user| %>
          <% if overwork_info(user) %>
            <h4>【<%= user.name %>の残業申請】</h4>
            <table class="table table-bordered table-striped overwork-application__table">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>時間外時間</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              
              <tbody>
                <% user.attendances.each do |day| %>
                  <%= f.fields_for "attendances[]", day do |attendance| %>
                  <%# 申請先のidとお知らせを開いている上長のidが一致する
                      (=お知らせを開いている上長に残業申請をしている)場合 %>
                    <% if day.applied_id == @superior.id %>
                      <tr>
                        <td><%= l(day.worked_on, format: :short) %></td>
                        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                        <td><%= l(day.finish_overwork, format: :time) %></td>
                        <td>
                          <%= overwork_times(user.desig_finish_worktime, day.finish_overwork,
                              day.next_day, day.worked_on) %>
                        </td>
                        <td><%= day.work_contents %></td>
                        <td><%= attendance.select :instructor_confirmation,
                                { "なし": 1, "申請中": 2, "承認": 3, "否認": 4 },
                                { selected: 2 }, class: "form-control", required: true %>
                        </td>
                        <td><%= attendance.check_box :reflection, {}, "true", "false" %></td>
                        <td><%= link_to "確認", user_path(user), class: "btn btn-primary" %></td>
                      </tr>
                    <% end %>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          <% end %>
        <% end %>
        <%= f.submit "変更を送信する", class: "btn btn-primary" %>
      <% end %>
      <%# link_to "変更を送信する", users_attendances_update_overwork_notice_path, :user_params => @users, method: :patch %>
    </div>
  </div>
</div>