<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <% @users.each do |user| %>
        <h4>【<%= user.name %>の残業申請】</h4> <%# form_withのurlがへん %>
        <% user.attendances.each do |attendance| %>
          <%= form_with(model: attendance, url: attendances_update_overwork_notice_user_path(attendance), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>時間外時間</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              
              <tbody>
                <% if attendance.instructor_confirmation.to_i == @superior.id %>
                  <tr>
                    <td><%= l(attendance.worked_on, format: :short) %></td>
                    <td><%= $days_of_the_week[attendance.worked_on.wday] %></td>
                    <td>
                      <%= overwork_times(user.desig_finish_worktime, attendance.finish_overwork,
                          attendance.next_day, attendance.worked_on) %>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>