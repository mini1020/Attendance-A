<% provide(:title, "Attendance log") %>
<div>
  <h1>勤怠ログ</h1>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>日付</th>
        <th>変更前出社時間</th>
        <th>変更前退社時間</th>
        <th>変更後出社時間</th>
        <th>変更後退社時間</th>
        <th>指示者</th>
        <th>承認日</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.correction.date %></td>
          <td><%= attendance.correction.before_attendance_time %></td>
          <td><%= attendance.correction.before_leaving_time %></td>
          <td><%= attendance.correction.attendance_time %></td>
          <td><%= attendance.correction.leaving_time %></td>
          <td><%= attendance.correction.instructor %></td>
          <td><%= attendance.correction.approval_date %></td>
          <%# instructorのidから上長の名前を取得して返すヘルパーが必要 %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

